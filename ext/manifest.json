{
  "name": "BuyBlack",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension suggests black-owned businesses you didn't know about!",
  "homepage_url": "http://buyblack.io",
  "icons": {
    "16": "icons/BuyBlack_Chrome_Toolbox_Icon16.png",
    "48": "icons/BuyBlack_Chrome_Toolbox_Icon48.png",
    "128": "icons/BuyBlack_Chrome_Toolbox_Icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/BuyBlack_Chrome_Toolbox_Icon16.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "https://www.google-analytics.com/",
    "storage",
    "tabs"
  ],
  
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
